# fullstack-psychology/backend/.env.example
# Environment Configuration for Psychology Backend

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
# Local MongoDB (default)
# MONGODB_URI=mongodb://localhost:27017/psychology_portfolio

# MongoDB Atlas (production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/psychology_portfolio?retryWrites=true&w=majority

# Alternative environment variable names (for compatibility)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/psychology_portfolio

# Logging Configuration
LOG_LEVEL=debug
# LOG_LEVEL=info (for production)

# CORS Configuration (frontend URLs)
FRONTEND_URL_DEV=http://localhost:5173
FRONTEND_URL_PROD=https://psychology-portfolio.vercel.app

# API Configuration
API_VERSION=1.0.0
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Performance Configuration
DB_POOL_SIZE=10
DB_TIMEOUT=5000

# Demo Configuration
DEMO_MODE=true
MAX_DEMO_SESSIONS=10

# Security (if needed later)
# JWT_SECRET=your-super-secret-jwt-key
# BCRYPT_ROUNDS=12

# External Services (if added later)
# ANALYTICS_API_KEY=your-analytics-key
# MONITORING_URL=your-monitoring-service

# Development vs Production Settings
# Development
DEBUG=true
VERBOSE_LOGGING=true
DEMO_DATA_ENABLED=true

# Production (comment out for production)
# DEBUG=false
# VERBOSE_LOGGING=false
# DEMO_DATA_ENABLED=false